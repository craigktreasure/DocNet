<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!--
    $(DocnetExePath) is set in the NuGet package props.
  -->
  <PropertyGroup>
    <DocnetJsonPath Condition="$(DocnetJsonPath) == ''">$(MSBuildProjectDirectory)</DocnetJsonPath>
  </PropertyGroup>

  <!-- RunDocnet
    Uses $(DocnetExePath) to run docnet.exe.
  -->
  <Target Name="RunDocnet"
          AfterTargets="Build">
    <PropertyGroup>
      <DocnetCommand>$(DocnetExePath) $(DocnetJsonPath)</DocnetCommand>
    </PropertyGroup>
    <Exec Command="$(DocnetCommand)" />
  </Target>
</Project>
