<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!--
    $(DocnetExePath) is set in the NuGet package props.
  -->
  <PropertyGroup>
    <DocnetJsonPath Condition="$(DocnetJsonPath) == ''">$(MSBuildProjectDirectory)</DocnetJsonPath>
  </PropertyGroup>

  <!-- RunDocnet
    Uses $(DocnetExePath) to run docnet.exe.
    Set <DocnetClearDestinationFolder>true</DocnetClearDestinationFolder> to clear the destination folder.
  -->
  <Target Name="RunDocnet"
          AfterTargets="Build">
    <PropertyGroup>
      <DocnetCommand>$(DocnetExePath)</DocnetCommand>
      <DocnetCommand Condition="$(DocnetClearDestinationFolder) == 'true'">$(DocnetCommand) -c</DocnetCommand>
      <DocnetCommand>$(DocnetCommand) $(DocnetJsonPath.Trim("\\"))</DocnetCommand>
    </PropertyGroup>
    <Exec Command="$(DocnetCommand)" WorkingDirectory="$(MSBuildProjectDirectory)" />
  </Target>
</Project>
